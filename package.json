{
  "name": "js-obveq",
  "version": "0.1.0",
  "description": "JS data structures for object value equality",
  "repository": "https://github.com/shawntabai/js-obveq",
  "author": "Shawn Tabai",
  "license": "MIT",
  "scripts": {
    "postinstall": "npx @arkweid/lefthook install",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint .",
    "fix": "eslint --fix ."
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@jest/globals": "^27.4.6",
    "@jest/types": "^27.4.2",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    },
    "ignorePatterns": [
      "/dist/**/*",
      "/node_modules/**/*"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "object-curly-spacing": [
        "warn",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "comma-style": [
        "warn",
        "last"
      ],
      "comma-dangle": [
        "warn",
        "always-multiline"
      ],
      "max-len": [
        "warn",
        120
      ],
      "max-lines": [
        "warn",
        300
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eol-last": [
        "warn",
        "always"
      ]
    }
  }
}